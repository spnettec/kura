<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/DbWireRecordStore">
    <OCD id="org.eclipse.kura.wire.DbWireRecordStore"
         name="%name" 
         description="%description">

        <AD id="table.name"
            name="%tableName"
            type="String"
            cardinality="0"
            required="true"
            default="WR_data"
            description="%tableNameDesc"/>   
        
        <AD id="maximum.table.size"
            name="%maximumTableSize"
            type="Integer"
            cardinality="0"
            required="true"
            default="10000"
            description="%maximumTableSizeDesc"
            min="1">
        </AD>
        
        <AD id="cleanup.records.keep"
            name="%cleanupRecordsKeep"
            type="Integer"
            cardinality="0"
            required="true"
            default="5000"
            description="%cleanupRecordsKeepDesc"
            min="0">
        </AD>
        
        <AD id="BaseDbService.target"
            name="%dbServiceTarget"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.db.H2DbService)"
            description="%dbServiceTargetDesc">
        </AD>
    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.DbWireRecordStore" factoryPid="org.eclipse.kura.wire.DbWireRecordStore">
        <Object ocdref="org.eclipse.kura.wire.DbWireRecordStore"/>
    </Designate>
</MetaData>
