<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/DbWireRecordFilter">
    <OCD id="org.eclipse.kura.wire.DbWireRecordFilter"
         name="%name" 
         description="%description">

        <AD id="sql.view"
            name="%sqlView"
            type="String"
            cardinality="0"
            required="true"
            default="SELECT * FROM &quot;WR_data&quot; LIMIT 10;"
            description="%sqlViewDesc">
        </AD>
        
        <AD id="cache.expiration.interval"
            name="%interval"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            min="0"
            description="%intervalDesc">
        </AD>
        
        <AD id="BaseDbService.target"
            name="%dbServicetarget"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.db.H2DbService)"
            description="%dbServicetargetDesc">
        </AD>
            
        <AD id="emit.on.empty.result"
            name="%emitEmptyResult"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%emitEmptyResultDesc"/>

    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.DbWireRecordFilter" factoryPid="org.eclipse.kura.wire.DbWireRecordFilter">
        <Object ocdref="org.eclipse.kura.wire.DbWireRecordFilter"/>
    </Designate>
</MetaData>
