<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/WireRecordQuery">
    <OCD id="org.eclipse.kura.wire.WireRecordQuery"
         name="%name" 
         description="%description">

        <AD id="query"
            name="%query"
            type="String"
            cardinality="0"
            required="true"
            default="SELECT * FROM &quot;WR_data&quot; LIMIT 10;"
            description="%queryDesc">
        </AD>
        
        <AD id="cache.expiration.interval"
            name="%expirationInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            min="0"
            description="%expirationIntervalDesc">
        </AD>
        
        <AD id="QueryableWireRecordStoreProvider.target"
            name="%storeProviderTarget"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.db.H2DbService)"
            description="%storeProviderTargetDesc">
        </AD>
            
        <AD id="emit.on.empty.result"
            name="%emptyResult"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%emptyResultDesc"/>

    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.WireRecordQuery" factoryPid="org.eclipse.kura.wire.WireRecordQuery">
        <Object ocdref="org.eclipse.kura.wire.WireRecordQuery"/>
    </Designate>
</MetaData>
