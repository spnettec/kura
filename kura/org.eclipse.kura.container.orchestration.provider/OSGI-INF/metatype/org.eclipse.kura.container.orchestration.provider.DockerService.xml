<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/DockerService">
    <OCD id="org.eclipse.kura.container.orchestration.provider.DockerService" 
          name="%name" 
          description="%description">
        
        <AD id="dockerService.enabled" name="%enabled" type="Boolean" cardinality="0" required="true" default="false"
            description="%enabledDesc">
        </AD>

        <AD id="dockerService.dockerHost" name="%hostUrl"
            description="%hostUrlDesc" type="String"
            cardinality="-1" required="true" default="unix:///var/run/docker.sock" />
        
         <AD id="dockerService.repository.enabled" name="%enableCredentials" type="Boolean" cardinality="0" required="true" default="false"
            description="%enableCredentialsDesc">
        </AD>
        
        <AD id="dockerService.repository.hostname" name="%repoHostname"
            description="%repoHostnameDesc" type="String"
            cardinality="0" required="false" default="" />
            
        <AD id="dockerService.repository.username" name="%username"
            description="%usernameDesc" type="String"
            cardinality="0" required="false" default="" />
            
        <AD id="dockerService.repository.password" name="%password"
            description="%passwordDesc" type="Password"
            cardinality="0" required="false" default="" />
        
    </OCD>

    <Designate pid="org.eclipse.kura.container.orchestration.provider.DockerService">
        <Object ocdref="org.eclipse.kura.container.orchestration.provider.DockerService" />
    </Designate>
</MetaData>