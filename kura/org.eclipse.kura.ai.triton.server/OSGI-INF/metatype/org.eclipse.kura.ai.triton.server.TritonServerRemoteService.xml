<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/TritonServerRemoteService">
    <OCD id="org.eclipse.kura.ai.triton.server.TritonServerRemoteService"
         name="%name"
         description="%description">

        <AD id="server.address"
            name="%serverSddress"
            type="String"
            cardinality="0"
            required="true"
            default="localhost"
            description="serverSddressDesc">
        </AD>

        <AD id="server.ports"
            name="%serverPorts"
            type="Integer"
            cardinality="3"
            min="1024"
            max="65535"
            required="true"
            default="4000,4001,4002"
            description="%serverPortsDesc">
        </AD>

        <AD id="models"
            name="%models"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%modelsDesc">
        </AD>

        <AD id="timeout"
            name="%timeout"
            type="Integer"
            cardinality="0"
            required="false"
            min="1"
            max="3600"
            default="3"
            description="%timeoutDesc">
        </AD>

        <AD id="grpc.max.size"
        	name="%grpcMaxSize"
        	type="Integer"
        	description="%grpcMaxSizeDesc"
        	cardinality="0"
        	required="true"
        	default="4194304"
        	min="1">
        </AD>

    </OCD>
    <Designate factoryPid="org.eclipse.kura.ai.triton.server.TritonServerRemoteService">
        <Object ocdref="org.eclipse.kura.ai.triton.server.TritonServerRemoteService"/>
    </Designate>
</MetaData>
