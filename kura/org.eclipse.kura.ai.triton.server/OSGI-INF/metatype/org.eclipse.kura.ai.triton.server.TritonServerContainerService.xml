<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/TritonServerContainerService">
    <OCD id="org.eclipse.kura.ai.triton.server.TritonServerContainerService"
         name="%name"
         description="%description">

        <AD id="container.image"
            name="%containerImage"
            description="%containerImageDesc"
            type="String"
            cardinality="1"
            required="true"
            default="nvcr.io/nvidia/tritonserver">
        </AD>

        <AD id="container.image.tag" name="%containerImageTag"
            description="%containerImageTagDesc"
            type="String"
            cardinality="1"
            required="true"
            default="latest">
        </AD>

        <AD id="server.ports"
            name="%serverPorts"
            type="Integer"
            cardinality="3"
            min="1024"
            max="65535"
            required="true"
            default="4000,4001,4002"
            description="%serverPortsDesc">
        </AD>

        <AD id="local.model.repository.path"
            name="%localModelRepositoryPath"
            type="String"
            cardinality="0"
            required="true"
            default=""
            description="%localModelRepositoryPathDesc">
       </AD>

       <AD id="local.model.repository.password"
            name="%localModelPassword"
            type="Password"
            cardinality="0"
            required="false"
            default=""
            description="%localModelPasswordDesc">
       </AD>

        <AD id="models"
            name="%models"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%modelsDesc">
        </AD>

        <AD id="local.backends.config"
            name="%localBackendsConfig"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%localBackendsConfigDesc">
        </AD>

        <AD id="container.memory"
            name="%containerMemory"
            description="%containerMemoryDesc"
            type="String"
            cardinality="0"
            required="false"
            default="">
        </AD>

        <AD id="container.cpus"
            name="%containerCpus"
            description="%containerCpusDesc"
            type="Float"
            cardinality="0"
            required="false"
            default="">
        </AD>

        <AD id="container.gpus"
            name="%containerGpus"
            description="%containerGpusDesc"
            type="String"
            cardinality="1"
            required="false"
            default="">
        </AD>

        <AD id="timeout"
            name="%timeout"
            type="Integer"
            cardinality="0"
            required="false"
            min="1"
            max="3600"
            default="10"
            description="%timeoutDesc">
        </AD>

        <AD id="grpc.max.size"
            name="%grpcMaxSize"
            type="Integer"
            description="%grpcMaxSizeDesc"
            cardinality="0"
            required="true"
            default="4194304"
            min="1">
        </AD>

    </OCD>
    <Designate factoryPid="org.eclipse.kura.ai.triton.server.TritonServerContainerService">
        <Object ocdref="org.eclipse.kura.ai.triton.server.TritonServerContainerService"/>
    </Designate>
</MetaData>
