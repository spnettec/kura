<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/TritonServerService">
    <OCD id="org.eclipse.kura.ai.triton.server.TritonServerService"
         name="%name" 
         description="%description">

         <AD id="enable.local"  
            name="%enableLocal"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false" 
            description="%enableLocalDesc">
        </AD>
        
        <AD id="server.address"  
            name="%serverAddress"
            type="String"
            cardinality="0" 
            required="true"
            default="localhost" 
            description="%serverAddressDesc">
        </AD>
       
        <AD id="server.ports"  
            name="%serverPorts"
            type="Integer"
            cardinality="3" 
            min="1024"
            max="65535"
            required="true"
            default="4000,4001,4002" 
            description="%serverPortsDesc">
        </AD>

        <AD id="local.model.repository.path"  
            name="%localModelRepositoryPath"
            type="String"
            cardinality="0" 
            required="false"
            default="" 
            description="%localModelRepositoryPathDesc">
       </AD>
       
       <AD id="local.model.repository.password"  
            name="%localModelPassword"
            type="Password"
            cardinality="0" 
            required="false"
            default="" 
            description="%localModelPasswordDesc">
       </AD>

        <AD id="models"  
            name="%models"
            type="String"
            cardinality="0" 
            required="false"
            default="" 
            description="%modelsDesc">
        </AD>
        
        <AD id="local.backends.path"  
            name="%localBackendsPath"
            type="String"
            cardinality="0" 
            required="false"
            default="" 
            description="%localBackendsPathDesc">
            </AD>
            
        <AD id="local.backends.config"  
            name="%localBackendsConfig"
            type="String"
            cardinality="0" 
            required="false"
            default="" 
            description="%localBackendsConfigDesc">
        </AD>

    </OCD>
    <Designate factoryPid="org.eclipse.kura.ai.triton.server.TritonServerService">
        <Object ocdref="org.eclipse.kura.ai.triton.server.TritonServerService"/>
    </Designate>
</MetaData>
