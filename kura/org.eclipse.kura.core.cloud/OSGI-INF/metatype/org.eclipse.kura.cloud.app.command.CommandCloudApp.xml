<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/CommandService">
    <OCD id="org.eclipse.kura.cloud.app.command.CommandCloudApp" 
         name="%name" 
         description="%description">
         
        <Icon resource="CommandPasswordService" size="32"/>

        <AD id="command.enable"
            name="%enabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%enabledDesc">
        </AD>
        
        <AD id="command.password.value"
        	name="%password"
        	type="Password"
        	cardinality="0"
        	required="false"
        	default=""
        	description="%passwordDesc">
        </AD>
        
        <AD id="command.working.directory"
        	name="%directory"
        	type="String"
        	cardinality="0"
        	required="false"
        	default=""
        	description="%directoryDesc">
        </AD>
        
        <AD id="command.timeout"
        	name="%timeout"
        	type="Integer"
        	cardinality="0"
        	required="false"
        	default="60"
        	min="1"
        	description="%timeoutDesc">
        </AD>
        
        <AD id="command.environment"
        	name="%environment"
        	type="String"
        	cardinality="0"
        	required="false"
        	default=""
        	description="%environmentDesc">
        </AD>
        
        <AD id="privileged.command.service.enable"
            name="%privilegedEnable"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%privilegedEnableDesc">
        </AD>
                    
    </OCD>
    
    <Designate pid="org.eclipse.kura.cloud.app.command.CommandCloudApp">
        <Object ocdref="org.eclipse.kura.cloud.app.command.CommandCloudApp"/>
    </Designate>
</MetaData>
