<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/DeploymentService">
    <OCD id="org.eclipse.kura.core.deployment.CloudDeploymentHandlerV2" 
         name="%name" 
         description="%description">

        <AD id="downloads.directory"
            name="%downloadsDirectory"
            type="String"
            cardinality="0"
            required="true"
            default="/tmp"
            description="%downloadsDirectoryDesc">
        </AD>

        <AD id="deployment.hook.associations"
            name="%deploymentHookAssociations"
            type="String"
            cardinality="0"
            required="true"
            default="# myRequestType=MyDeploymentHook"
            description="%deploymentHookAssociationsDesc">
        </AD>

        <AD id="SslManagerService.target"
            name="%sslManagerServiceTarget"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.ssl.SslManagerService)"
            description="%sslManagerServiceTargetDesc"/>

    </OCD>

    <Designate pid="org.eclipse.kura.core.deployment.CloudDeploymentHandlerV2">
        <Object ocdref="org.eclipse.kura.core.deployment.CloudDeploymentHandlerV2"/>
    </Designate>
</MetaData>
