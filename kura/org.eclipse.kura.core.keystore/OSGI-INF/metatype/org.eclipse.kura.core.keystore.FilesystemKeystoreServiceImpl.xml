<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/FilesystemKeystoreService">
    <OCD id="org.eclipse.kura.core.keystore.FilesystemKeystoreServiceImpl" 
         name="%name" 
         description="%description">

        <AD id="keystore.path"
            name="%keystorePath"
            type="String"
            cardinality="0"
            required="true"
            default="/tmp/keystore.ks"
            description="%keystorePathDesc">
        </AD>

        <AD id="keystore.password"
            name="%keystorePassword"
            type="Password"
            cardinality="0"
            required="false"
            default="changeit"
            description="%keystorePasswordDesc">
        </AD>

        <AD id="randomize.password"
            name="%randomizePassword"
            type="Boolean"
            cardinality="0"
            required="false"
            default="false"
            description="%randomizePasswordDesc">
        </AD>

        <AD id="crl.management.enabled"
            name="%crlCacheEnabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%crlCacheEnabledDesc">
        </AD>
        
        <AD id="crl.urls"
            name="%crlUrls"
            type="String"
            cardinality="5"
            required="false"
            default=""
            description="%crlUrlsDesc">
        </AD>

        <AD id="crl.update.interval"
            name="%crlForceUpdateInterval"
            type="Long"
            cardinality="0"
            required="true"
            default="1"
            description="%crlForceUpdateIntervalDesc">
        </AD>

        <AD id="crl.update.interval.time.unit"
            name="%crlForceUpdateIntervalTimeUnit"
            type="String"
            cardinality="0"
            required="true"
            default="DAYS"
            description="%crlForceUpdateIntervalTimeUnitDesc">
            <Option label="%seconds" value="SECONDS" />
            <Option label="%minutes" value="MINUTES" />
            <Option label="%hours" value="HOURS" />
            <Option label="%days" value="DAYS" />
        </AD>

        <AD id="crl.check.interval"
            name="%crlCheckInterval"
            type="Long"
            cardinality="0"
            required="true"
            default="5"
            description="%crlCheckIntervalDesc">
        </AD>

        <AD id="crl.check.interval.time.unit"
            name="%crlCheckIntervalTimeUnit"
            type="String"
            cardinality="0"
            required="true"
            default="MINUTES"
            description="%crlCheckIntervalTimeUnitDesc">
            <Option label="%seconds" value="SECONDS" />
            <Option label="%minutes" value="MINUTES" />
            <Option label="%hours" value="HOURS" />
            <Option label="%days" value="DAYS" />
        </AD>

        <AD id="crl.store.path"
            name="%crlStorePath"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%crlStorePathDesc">
        </AD>

        <AD id="verify.crl"
            name="%enableCrl"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%enableCrlDesc">
        </AD>

    </OCD>

    <Designate pid="org.eclipse.kura.core.keystore.FilesystemKeystoreServiceImpl" factoryPid="org.eclipse.kura.core.keystore.FilesystemKeystoreServiceImpl">
        <Object ocdref="org.eclipse.kura.core.keystore.FilesystemKeystoreServiceImpl"/>
    </Designate>
</MetaData>
