<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/HttpService">
    <OCD id="org.eclipse.kura.http.server.manager.HttpService"
         name="%name" 
         description="%description">

        <AD id="http.enabled"
            name="%enabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%enabledDesc">
        </AD>
        
        <AD id="http.port"  
            name="%port"
            type="Integer"
            cardinality="0"
            required="true"
            default="80"
            min = "1"
            max = "65535"
            description="%portDesc">
        </AD>

        <AD id="https.enabled"
            name="%httpsEnabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%httpsEnabledDesc">
        </AD>
        
        <AD id="https.port"  
            name="%httpsPort"
            type="Integer"
            cardinality="0"
            required="true"
            default="443"
            min = "1"
            max = "65535"
            description="%httpsPortDesc">
        </AD>

        <AD id="https.client.auth.enabled"
            name="%httpsClientAuthenticationEnabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%httpsClientAuthenticationEnabledDesc">
        </AD>

        <AD id="https.client.auth.port"
            name="%httpsClientAuthenticationPort"
            type="Integer"
            cardinality="0"
            required="true"
            default="4443"
            min = "1"
            max = "65535"
            description="%httpsClientAuthenticationPortDesc">
        </AD>

        <AD id="https.keystore.path"
            name="%httpsKeystorePath"
            type="String"
            cardinality="0"
            required="false"
            description="%httpsKeystorePathDesc"/>
        
        <AD id="https.keystore.password"  
            name="%httpsKeystorePassword"
            type="Password"
            cardinality="0"
            required="false"
            default="changeit" 
            description="%httpsKeystorePasswordDesc"/>

        <AD id="https.revocation.check.enabled"
            name="%httpsRevocationCheckEnabled"
            type="Boolean"
            cardinality="0"
            required="false"
            default="false"
            description="%httpsRevocationCheckEnabledDesc"/>

        <AD id="https.client.ocsp.url"
            name="%httpsClientRevocationURL"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%httpsClientRevocationURLDesc"/>

        <AD id="https.client.crl.path"
            name="%httpsClientCRLpath"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%httpsClientCRLpathDesc"/>

        <AD id="https.client.revocation.soft.fail"
            name="%httpsRevocationSoft-failEnabled"
            type="Boolean"
            cardinality="0"
            required="false"
            default="false"
            description="%httpsRevocationSoft-failEnabledDesc"/>
    </OCD>

    <Designate pid="org.eclipse.kura.http.server.manager.HttpService">
        <Object ocdref="org.eclipse.kura.http.server.manager.HttpService"/>
    </Designate>
</MetaData>
