<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/Timer">
    <OCD id="org.eclipse.kura.wire.Timer" 
         name="%name" 
         description="%description">

        <AD id="type"
            name="%type"
            type="String"
            cardinality="0"
            required="true"
            default="SIMPLE"
            description="%typeDesc">
            <Option label="SIMPLE" value="SIMPLE" />
            <Option label="CRON" value="CRON" />
        </AD>
        <AD id="simple.interval"
            name="%simpleInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="10"
            description="%simpleIntervalDesc"
            min="1"/>
        
        <AD id="simple.time.unit"
            name="%simpleTimeUnit"
            type="String"
            cardinality="0"
            required="true"
            default="SECONDS"
            description="%simpleTimeUnitDesc">
            <Option label="MILLISECONDS" value="MILLISECONDS" />
            <Option label="SECONDS" value="SECONDS" />
            <Option label="MINUTES" value="MINUTES" />
            <Option label="HOURS" value="HOURS" />
            <Option label="DAYS" value="DAYS" />
        </AD> 
        
        <AD id="simple.first.tick.policy"
            name="%simpleFirstTickPolicy"
            type="String"
            cardinality="0"
            required="true"
            default="DEFAULT"
            description="%simpleFirstTickPolicyDesc">
            <Option label="DEFAULT" value="DEFAULT" />
            <Option label="CUSTOM" value="CUSTOM" />
        </AD>
        
        <AD id="simple.custom.first.tick.interval"
            name="%simpleCustomFirstTickInterval"
            type="Integer"
            cardinality="0"
            required="false"
            default="0"
            description="%simpleCustomFirstTickIntervalDesc">
        </AD>
        
        <AD id="cron.interval"
            name="%cronInterval"
            type="String"
            cardinality="0"
            required="true"
            default="0/10 * * * * ?"
            description="%cronIntervalDesc"/>
           
    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.Timer" factoryPid="org.eclipse.kura.wire.Timer">
        <Object ocdref="org.eclipse.kura.wire.Timer"/>
    </Designate>
</MetaData>
