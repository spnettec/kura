<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/SparkplugDataTransport">

    <OCD id="org.eclipse.kura.cloudconnection.sparkplug.mqtt.transport.SparkplugDataTransport"
         name="%name"
         description="%description">

         <Icon resource="MqttDataTransport" size="32"/>
         
         <AD id="group.id"
            name="%groupId"
            type="String"
            cardinality="0"
            required="true"
            default="group"
            description="%groupIdDesc"/>

        <AD id="node.id"
            name="%nodeId"
            type="String"
            cardinality="0"
            required="true"
            default="node"
            description="%nodeIdDesc"/>

        <AD id="primary.host.application.id"
            name="%primaryHostApplicationId"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%primaryHostApplicationIdDesc"/>

         <AD id="server.uris"
             name="%serverUris"
             type="String"
             cardinality="0"
             required="true"
             default="tcp://broker1-url:1883"
             description="%serverUrisDesc"/>

         <AD id="client.id"
             name="%clientId"
             type="String"
             cardinality="0" 
             required="true"
             default="client" 
             description="%clientIdDesc"/>

         <AD id="username"
             name="%username"
             type="String"
             cardinality="0"
             required="false"
             default="" 
             description="%usernameDesc"/>

         <AD id="password"
             name="%password"
             type="Password"
             cardinality="0" 
             required="false"
             default=""
             description="%passwordDesc"/>

         <AD id="keep.alive"
             name="%keepAlive"
             type="Integer"
             cardinality="0"
             required="true"
             default="60"
             description="%keepAliveDesc"/>

         <AD id="connection.timeout"
             name="%connectionTimeout"
             type="Integer"
             cardinality="0"
             required="true"
             default="30"
             description="%connectionTimeoutDesc"/>

         <AD id="SslManagerService.target"
            name="%sslManagerServiceTarget"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.ssl.SslManagerService)"
            description="%sslManagerServiceTargetDesc"/>

    </OCD>

    <Designate pid="org.eclipse.kura.cloudconnection.sparkplug.mqtt.transport.SparkplugDataTransport"
               factoryPid="org.eclipse.kura.cloudconnection.sparkplug.mqtt.transport.SparkplugDataTransport">
        <Object ocdref="org.eclipse.kura.cloudconnection.sparkplug.mqtt.transport.SparkplugDataTransport"/>
    </Designate>
</MetaData>