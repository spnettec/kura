<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/AIComponent">
    <OCD id="org.eclipse.kura.wire.AIComponent"
         name="%name" 
         description="%description">
         
        <AD id="InferenceEngineService.target"
            name="%interfaceEngName"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=changeme)"
            description="%interfaceEngNameDesc">
        </AD>
        
        <AD id="preprocessor.model.name"
        	name="%preProcessModelName"
        	type="String"
        	cardinality="0"
        	required="false"
        	default=""
        	description="%preProcessModelNameDesc">
        </AD>
        
        <AD id="inference.model.name"
        	name="%interfaceModelName"
        	type="String"
        	cardinality="0"
        	required="true"
        	default="model_name"
        	description="%interfaceModelNameDesc">
        </AD>
        
        <AD id="postprocessor.model.name"
        	name="%postProcessModelName"
        	type="String"
        	cardinality="0"
        	required="false"
        	default=""
        	description="%postProcessModelNameDesc">
        </AD>
        
    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.AIComponent" factoryPid="org.eclipse.kura.wire.AIComponent">
        <Object ocdref="org.eclipse.kura.wire.AIComponent"/>
    </Designate>
</MetaData>
