<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/EventPublisher">
    <OCD id="org.eclipse.kura.event.publisher.EventPublisher" 
        name="%name"
        description="%description">

		<AD id="topic.prefix"
            name="%topicPrefix"
            type="String"
            cardinality="0"
            required="false"
            default="$EVT"
            description="%topicPrefixDesc">
        </AD>

		<AD id="topic"
            name="%topic"
            type="String"
            cardinality="0"
            required="true"
            default=""
            description="%topicDesc">
        </AD>

        <AD id="qos"
            name="%qos"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            description="%qosDesc">
            <Option label="0" value="0" />
            <Option label="1" value="1" />
        </AD>

        <AD id="retain"
            name="%retain"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%retainDesc">
        </AD>

        <AD id="priority"
            name="%priority"
            type="Integer"
            cardinality="0"
            required="true"
            default="7"
            description='%priorityDesc'>
        </AD>
    </OCD>
    
    <Designate pid="org.eclipse.kura.event.publisher.EventPublisher"
    	factoryPid="org.eclipse.kura.event.publisher.EventPublisher">
        <Object ocdref="org.eclipse.kura.event.publisher.EventPublisher"/>
    </Designate>
</MetaData>