#!/usr/bin/bash

set -e

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"

DP="$(realpath "$1")"
shift

 : ${DPA_PROPERTIES:=${KURA_DIR}/packages/dpa.properties}

echo "Registering '$DP' ..."

DP_NAME="$(echo $(unzip -q -c "$DP" META-INF/MANIFEST.MF | grep 'Bundle-SymbolicName' | cut -d ':' -f 2 | tr -d '\r'))"

echo "Register '$DP' as '$DP_NAME'"

echo "${DP_NAME}=file\:${DP}" >> "${DPA_PROPERTIES}"
