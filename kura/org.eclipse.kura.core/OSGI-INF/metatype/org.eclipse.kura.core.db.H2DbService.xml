<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/H2DbService">
    <OCD id="org.eclipse.kura.core.db.H2DbService" 
         name="%name" 
         description="%description">

        <AD id="db.connector.url"
            name="%connectorURL"
            type="String"
            cardinality="0" 
            required="true"
            default="jdbc:h2:mem:kuradb"
            description="%connectorURLDesc"/>

        <AD id="db.user"
            name="%user"
            type="String"
            cardinality="0" 
            required="true"
            default="SA"
            description="%userDesc"/>

        <AD id="db.password"
            name="%password"
            type="Password"
            cardinality="0" 
            required="false"
            default=""
            description="%passwordDesc"/>
            
        <AD id="db.checkpoint.interval.seconds"
            name="%checkpoint"
            type="Integer"
            cardinality="0" 
            required="true"
            default="900"
            min="5"
            description="%checkpointDesc"/>
            
        <AD id="db.defrag.interval.minutes"
            name="%defragInterval"
            type="Integer"
            cardinality="0" 
            required="true"
            default="15"
            min="0"
            description="%defragIntervalDesc"/>    
            
         <AD id="db.connection.pool.max.size"
            name="%poolMaxSize"
            type="Integer"
            cardinality="0" 
            required="true"
            default="10"
            min="1"
            description="%poolMaxSizeDesc"/>

        <AD id="db.max.compact.time" 
            name="%maxCompactTime"
            type="Integer" 
            cardinality="0" 
            required="true" 
            default="120000" 
            min="0"
            description="%maxCompactTimeDesc" />
        </OCD>

    <Designate pid="org.eclipse.kura.core.db.H2DbService" factoryPid="org.eclipse.kura.core.db.H2DbService">
        <Object ocdref="org.eclipse.kura.core.db.H2DbService"/>
    </Designate>
</MetaData>
