<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/SslManagerService">
    <OCD id="org.eclipse.kura.ssl.SslManagerService"
         name="%name"
         description="%description">

        <Icon resource="SslManagerService" size="32"/>

        <AD id="ssl.default.protocol"
            name="%protocol"
            type="String"
            cardinality="0"
            required="false"
            default="TLSv1.2"
            description="%protocolDesc"/>

        <AD id="ssl.hostname.verification"
        	name="%verification"
        	type="Boolean"
        	cardinality="0"
        	required="false"
        	default="true"
        	description="%verificationDesc" />

        <AD id="KeystoreService.target"
            name="%keystoreTargetFilter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=changeme)"
            description="%keystoreTargetFilterDesc">
            description="Specifies, as an OSGi target filter, the pid of the KeystoreService used to manage the SSL key store.">
        </AD>
        
        <AD id="TruststoreKeystoreService.target"
            name="%truststoreTargetFilter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=changeme)"
            description="%truststoreTargetFilterDesc">
        </AD>

        <AD id="ssl.default.cipherSuites"
            name="%cipherSuites"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="%cipherSuitesDesc"/>
        
         <AD id="ssl.revocation.check.enabled"
            name="%revCheckEnabled"
            type="Boolean"
            cardinality="0"
            required="false"
            default="false"
            description="%revCheckEnabledDesc"/>
            
        <AD id="ssl.revocation.mode"
            name="%revCheckMode"
            type="String"
            cardinality="0"
            required="true"
            default="PREFER_OCSP"
            description="%revCheckModeDesc">
            <Option label="%revModPreOcsp" value="PREFER_OCSP"/>
            <Option label="%revModPreCrl" value="PREFER_CRL"/>
            <Option label="%revModCrlOnly" value="CRL_ONLY"/>
        </AD>

        <AD id="ssl.revocation.soft.fail"
            name="%revSoftEnabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%revSoftEnabledDesc"/>
    </OCD>

    <Designate factoryPid="org.eclipse.kura.ssl.SslManagerService">
        <Object ocdref="org.eclipse.kura.ssl.SslManagerService"/>
    </Designate>
</MetaData>