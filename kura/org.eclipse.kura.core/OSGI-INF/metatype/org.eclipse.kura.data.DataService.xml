<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/DataService">
    <OCD id="org.eclipse.kura.data.DataService"
         name="%name" 
         description="%description">

        <Icon resource="DataService" size="32"/>
        
        <AD id="connect.auto-on-startup"
            name="%connectAutoStartup"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%connectAutoStartupDesc"/>
                        
        <AD id="connect.retry-interval"
            name="%connectRetryInterval"
            type="Integer"
            cardinality="0" 
            required="true"
            default="60"
            min="1"
            description="%connectRetryInterval"/>
            
        <AD id="enable.recovery.on.connection.failure"
            name="%recoveryConnectionFailure"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="%recoveryConnectionFailureDesc"/>
        
        <AD id="connection.recovery.max.failures"
            name="%connectionRecoveryMaxFailures"
            type="Integer"
            cardinality="0" 
            required="true"
            default="10"
            min="1"
            description="%connectionRecoveryMaxFailuresDesc"/>
            
        <AD id="disconnect.quiesce-timeout"
            name="%disconnectQuiesceTimeout"
            type="Integer"
            cardinality="0"
            required="true"
            default="10"
            min="0"
            description="%disconnectQuiesceTimeoutDesc"/>

        <AD id="store.db.service.pid"
            name="%storeDBServicePID"
            type="String"
            cardinality="0"
            required="true"
            default="org.eclipse.kura.db.H2DbService"
            description="%storeDBServicePIDDesc"/>

        <AD id="store.housekeeper-interval"
            name="%storeHousekeeperInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="900"
            min="5"
            description="%storeHousekeeperIntervalDesc"/>

        <AD id="store.purge-age"
            name="%storePurgeAge"
            type="Integer"
            cardinality="0"
            required="true"
            default="60"
            min="5"
            description="%storePurgeAgeDesc"/>
            
        <AD id="store.capacity"
            name="%storeCapacity"
            type="Integer"
            cardinality="0"
            required="true"
            default="10000"
            min="1"
            description="%storeCapacityDesc"/>
            
        <AD id="in-flight-messages.republish-on-new-session"
            name="%inFlightRepublishNewSession"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="%inFlightRepublishNewSessionDesc"/>

        <AD id="in-flight-messages.max-number"
            name="%inFlightMaxNumber"
            type="Integer"
            cardinality="0"
            required="true"
            default="9"
            min="1"
            max="10"
            description="%inFlightMaxNumberDesc"/>
            
        <AD id="in-flight-messages.congestion-timeout"
            name="%inFlightCongestionTimeout"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            min="0"
            description="%inFlightCongestionTimeoutDesc"/>
        
        <AD id="enable.rate.limit" 
            name="%rateLimit" 
            type="Boolean" 
            cardinality="0" 
            required="true" 
            default="true"
            description="%rateLimitDesc" />

        <AD id="rate.limit.average"
            name="%rateLimitAverage"
            type="Integer"
            cardinality="0"
            required="true"
            default="1"
            min="1"
            description="%rateLimitAverageDesc"/>
        <AD id="rate.limit.time.unit"
            name="%rateLimitUnit"
            type="String"
            cardinality="0"
            required="true"
            default="SECONDS"
            description="%rateLimitUnitDesc">
            <Option label="SECONDS" value="SECONDS" />
            <Option label="MINUTES" value="MINUTES" />
            <Option label="HOURS" value="HOURS" />
            <Option label="DAYS" value="DAYS" />
        </AD>
        
        <AD id="rate.limit.burst.size"
            name="%rateLimitBurst"
            type="Integer"
            cardinality="0"
            required="true"
            default="1"
            min="1"
            description="%rateLimitBurstDesc"/>
            
        <AD id="connection.schedule.enabled" 
            name="%enableConnectionSchedule" 
            type="Boolean" 
            cardinality="0" 
            required="true" 
            default="false"
            description="%enableConnectionScheduleDesc" />
            
        <AD id="connection.schedule.expression" 
            name="%connectionScheduleCRONExpression" 
            type="String" 
            cardinality="0" 
            required="true" 
            default="0 0 0 ? * * *"
            description="%connectionScheduleCRONExpressionDesc" />
            
        <AD id="connection.schedule.priority.override.enable" 
            name="%overrideEnable" 
            type="Boolean" 
            cardinality="0" 
            required="true" 
            default="false"
            description="%overrideEnableDesc" />
            
        <AD id="connection.schedule.priority.override.threshold" 
            name="%overrideThreshold" 
            type="Integer" 
            cardinality="0" 
            required="true" 
            default="1"
            description="%overrideThresholdDesc" />
            
         <AD id="connection.schedule.inactivity.interval.seconds" 
            name="%connectionScheduleDisconnectInactivityIntervalSeconds" 
            type="Long" 
            cardinality="0" 
            required="true" 
            default="60"
            min="1"
            description="%connectionScheduleDisconnectInactivityIntervalSecondsDesc" />

          <AD id="maximum.payload.size"
            name="%maxPayloadSize"
            type="Long"
            cardinality="0"
            required="true"
            default="16777216"
            min="0"
            description="%maxPayloadSizeDesc"/>

    </OCD>
    <Designate pid="org.eclipse.kura.data.DataService" factoryPid="org.eclipse.kura.data.DataService">
        <Object ocdref="org.eclipse.kura.data.DataService"/>
    </Designate>
</MetaData>
