<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
    xmlns:da="urn:import:org.eclipse.kura.web.client.ui.drivers.assets"
    xmlns:kura="urn:import:org.eclipse.kura.web.client.ui" xmlns:kura.util="urn:import:org.eclipse.kura.web.client.util">

    <ui:with field="msgs" type="org.eclipse.kura.web.client.messages.Messages"></ui:with>

    <b:Container fluid="true">
        <b:Column size="MD12">
            <b:Row>
                <g:HTMLPanel ui:field="driversAssetsIntro">
                    <b.html:Paragraph text="{msgs.driversAssetsTabIntro}" />
                </g:HTMLPanel>
            </b:Row>
            <b:Row b:id="driversAndAssetsIntro">
                <b:ButtonGroup size="SMALL">
                    <b:Button icon="PLUS" ui:field="newDriverButton" text="{msgs.newDriver}" enabled="true" />
                    <b:Button icon="PLUS" ui:field="newAssetButton" text="{msgs.newAsset}" enabled="false" />
                    <b:Button icon="TRASH" ui:field="deleteButton" text="{msgs.delete}" enabled="false" />
                </b:ButtonGroup>
            </b:Row>
            <da:DriversAndAssetsListUi ui:field="driverAndAssetsListUi" />

            <b:Modal closable="true" dataKeyboard="true" ui:field="newDriverModal"
                title="{msgs.createNewDriverLabel}" b:id="newDriverModal">
                <b:ModalBody>
                    <b.html:Paragraph text="{msgs.createNewDriverIntroLabel}" />
                    <b:Form type="HORIZONTAL">
                        <b:FieldSet>
                            <b:FormGroup>
                                <b:FormLabel for="formDriverFactory" text="{msgs.driverFactory}" />
                                <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <b:ListBox b:id="formDriverFactory" ui:field="driverFactoriesList" />
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formDriverPid" text="{msgs.driverPid}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <kura.util:PidTextBox b:id="formDriverPid" ui:field="driverPid"
                                    autoComplete="false" validateOnBlur="true" />
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formDriverName" text="{msgs.driverName}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <b:TextBox b:id="formDriverName"
                                    ui:field="driverName" autoComplete="false"/>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formDriverDesc" text="{msgs.driverDesc}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <b:TextArea b:id="formDriverDesc"
                                    ui:field="driverDesc" autoComplete="false"/>
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
                </b:ModalBody>
                <b:ModalFooter>
                    <b:Button addStyleNames="fa" type="PRIMARY" dataDismiss="MODAL"
                        ui:field="buttonNewDriverCancel" text="{msgs.cancelButton}" />
                    <b:Button addStyleNames="fa" type="PRIMARY" ui:field="buttonNewDriverApply"
                        text="{msgs.apply}" />
                </b:ModalFooter>
            </b:Modal>

            <b:Modal closable="true" dataKeyboard="true" ui:field="newAssetModal"
                title="{msgs.createNewAssetLabel}" b:id="newAssetModal">
                <b:ModalBody>
                    <b.html:Paragraph text="{msgs.createNewAssetIntroLabel}" />
                    <b:Form type="HORIZONTAL">
                        <b:FieldSet>
                            <b:FormGroup>
                                <b:FormLabel for="formAssetPid" text="{msgs.assetPid}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <kura.util:PidTextBox b:id="formAssetPid" ui:field="assetPid"
                                    autoComplete="false" validateOnBlur="true" />
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formAssetName"  text="{msgs.assetName}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <b:TextBox b:id="formAssetName"
                                    ui:field="assetName" autoComplete="false"/>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formAssetDesc"  text="{msgs.assetDesc}" />
                                <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" />
                                <b:TextArea b:id="formAssetDesc"
                                    ui:field="assetDesc" autoComplete="false"/>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formAssetDriverPid" text="{msgs.driverPid}" />
                                <kura:KuraTextBox b:id="formAssetDriverPid" ui:field="assetDriverPid" enabled="false" />
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
                </b:ModalBody>
                <b:ModalFooter>
                    <b:Button addStyleNames="fa" type="PRIMARY" dataDismiss="MODAL"
                        ui:field="buttonNewAssetCancel" text="{msgs.cancelButton}" />
                    <b:Button addStyleNames="fa" type="PRIMARY" ui:field="buttonNewAssetApply"
                        text="{msgs.apply}" />
                </b:ModalFooter>
            </b:Modal>

            <kura:AlertDialog ui:field="confirmDialog" b:id="drivers-assets-confirm-dialog" />
        </b:Column>
    </b:Container>
</ui:UiBinder>
