<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/CamelFactory">
    <OCD id="org.eclipse.kura.camel.cloud.factory.CamelFactory"
         name="%name" 
         description="%description">
        
         <AD id="xml"
            name="%xml"
            type="String"
            cardinality="1"
            required="true"
            description="%xmlDesc"/>

        <AD id="scriptEngineName"  
            name="%scriptEngineName"
            type="String"
            cardinality="1"
            required="true"
            default="Javascript"
            description="%scriptEngineNameDesc">
            <Option label="Javascript" value="Javascript"/>
            <Option label="Groovy" value="Groovy"/>
        </AD>
            
        <AD id="initCode"
            name="%initCode"
            type="String"
            cardinality="1"
            required="false"
            description="%initCodeDesc"/>
            
        <AD id="enableJmx"
            name="%enableJmx"
            type="Boolean"
            cardinality="1"
            required="true"
            default="true"
            description="%enableJmxDesc"/>
    </OCD>

    <Designate pid="org.eclipse.kura.camel.cloud.factory.CamelFactory" factoryPid="org.eclipse.kura.camel.cloud.factory.CamelFactory">
        <Object ocdref="org.eclipse.kura.camel.cloud.factory.CamelFactory"/>
    </Designate>
</MetaData>
